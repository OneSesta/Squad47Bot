<Window x:Class="TelegramBot.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramBot"
        mc:Ignorable="d"
        Title="Таможка Бот" 
        Height="295" 
        Width="495"
        MinHeight="295"
        MinWidth="495">

    <Grid Background="#FF2B2B2B" 
          Margin="0,0,0,0">
        <Button Content="Start Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="230" 
                Height="85" 
                Background="#FF4B4B4B" 
                FontSize="18" 
                BorderBrush="White" 
                Foreground="White" 
                FontWeight="Bold" 
                Command="{Binding ActivateCommand}"
                />

        <Button Content="Stop Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="230" 
                Height="85" 
                Margin="0,85,0,0"  
                Background="#FF4B4B4B" 
                FontSize="18" 
                BorderBrush="White" 
                Foreground="White" 
                FontWeight="Bold"
                Command="{Binding DeactivateCommand}"/>
        <Button x:Name="button3" 
                Content="Close" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="230" 
                Height="85" 
                Margin="0,170,0,-3"  
                Background="#FF4B4B4B" 
                FontSize="18" 
                BorderBrush="White" 
                Foreground="White" 
                FontWeight="Bold" 
                Command="{Binding ExitApplicationCommand}"/>
        <TextBox HorizontalAlignment="Left" 
                 Margin="230,0,0,0"
                 TextWrapping="Wrap" 
                 Text="{Binding Log}"
                 VerticalAlignment="Top"
                 Height="255" Width="250"
                 Background="White" 
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True" BorderBrush="White"
                 TextChanged="TextBox_TextChanged"/>
    </Grid>
</Window>
