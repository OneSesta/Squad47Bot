<Window x:Class="TelegramBot.Views.MainWindow"
        x:Name="MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramBot"
        mc:Ignorable="d"
        Title="Squad 47 Bot" 
        Height="300" 
        Width="500"
        MinHeight="300"
        MinWidth="500" 
        ResizeMode="CanMinimize"
        WindowStyle="SingleBorderWindow">

    <Window.Resources>
       
    </Window.Resources>

    <Grid Background="#FF404040" >

        <Button Content="Start Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Height="45" Width="110" 
                Command="{Binding ActivateCommand}"
                />

        <Button Content="Stop Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="130,5,0,0" 
                Command="{Binding DeactivateCommand}"
                />

        <Button Content="Close" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="230" Margin="10,210,0,0"
                Command="{Binding ExitApplicationCommand}"
                />

        <Button Content="Clear Log" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="230" Height="45" Margin="10,160,0,0"
                Command="{Binding ClearLogCommand}"
                />

        <Button Content="Files" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="10,55,0,0"
                Command="{Binding OpenFilesFolderCommand}"
                />

        <Button Content="Schedule" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="130,55,0,0"
                />
        
        <TextBox x:Name="LogTextBox"
                 HorizontalAlignment="Left" 
                 Margin="250,5,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding Log, Mode=OneWay}"
                 VerticalAlignment="Top"
                 Height="250" Width="230"
                 Background="#FF575757"
                 BorderBrush="{x:Null}"
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True" 
                 Foreground="White"
                 Padding="7,0,7,0">
                 
            <TextBox.BitmapEffect>

                <DropShadowBitmapEffect ShadowDepth="3" Softness="0.2"  Opacity="0.5"/>

            </TextBox.BitmapEffect>

        </TextBox>
        

    </Grid>
</Window>
