<Window x:Class="TelegramBot.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramBot"
        mc:Ignorable="d"
        Title="Таможка Бот" 
        Height="300" 
        Width="500"
        MinHeight="300"
        MinWidth="500">


    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="Background" Value="#FF575757" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Width" Value="230" />
                <Setter Property="Height" Value="85" />
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="10,5,0,0"/>
                <Setter Property="BorderBrush" Value="{x:Null}" />


            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black" />
                </Trigger>
            </Style.Triggers>



        </Style>
    </Window.Resources>

    <Grid Background="#FF404040">



        <Button Content="Start Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Height="45" Width="110" 
                Command="{Binding ActivateCommand}">

            <Button.Effect>
                <DropShadowEffect ShadowDepth="3"></DropShadowEffect>
            </Button.Effect>


        </Button>


        <Button Content="Stop Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="130,5,0,0" 
                Command="{Binding DeactivateCommand}">


            <Button.Effect>
                <DropShadowEffect ShadowDepth="3"></DropShadowEffect>
            </Button.Effect>
        </Button>


        <Button Content="Close" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="230" Margin="10,210,0,0"
                Command="{Binding ExitApplicationCommand}">


            <Button.Effect>
                <DropShadowEffect ShadowDepth="3"></DropShadowEffect>
            </Button.Effect>
        </Button>

        <Button 
                Content="Расписание" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="230" Height="45" Margin="10,65,0,0">


            <Button.Effect>
                <DropShadowEffect ShadowDepth="3"></DropShadowEffect>
            </Button.Effect>
        </Button>



        <Button Content="Список файлов" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="230" Margin="10,120,0,0">


            <Button.Effect>
                <DropShadowEffect ShadowDepth="3"></DropShadowEffect>
            </Button.Effect>
        </Button>



        <TextBox HorizontalAlignment="Left" 
                 Margin="250,5,0,0"
                 TextWrapping="Wrap" 
                 Text="{Binding Log}"
                 VerticalAlignment="Top"
                 Height="250" Width="230"
                 Background="White" 
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True" BorderBrush="White"
                 TextChanged="TextBox_TextChanged"/>


    </Grid>
</Window>
