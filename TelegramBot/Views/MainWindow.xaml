<Window x:Class="TelegramBot.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramBot"
        mc:Ignorable="d"
        Title="Squad 47 Bot" 
        Height="300" 
        Width="500"
        MinHeight="300"
        MinWidth="500">


    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Style.Setters>
                <Setter Property="Background" Value="#FF575757" />
                <Setter Property="FontSize" Value="18" />
                <Setter Property="Width" Value="230" />
                <Setter Property="Height" Value="85" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="10,5,0,0"/>
                <Setter Property="BorderBrush" Value="{x:Null}"/>
                <Setter Property ="FontFamily" Value="Candara"/>
                <Setter Property ="FontSize" Value="19"/>
                
                <Setter Property = "BitmapEffect">
                    
                    <Setter.Value>
                        <DropShadowBitmapEffect ShadowDepth="3" Softness="0.2"  Opacity="0.5"/>
                    </Setter.Value>
                </Setter>
            </Style.Setters>

            <Style.Triggers>

                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property = "BitmapEffect" >
                        <Setter.Value>
                            <DropShadowBitmapEffect ShadowDepth="3" Softness="0.2" Opacity="0.5" Color="#FFCFCFCF"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>

                <Trigger Property="IsPressed" Value="True">
                    <Setter Property = "BitmapEffect" Value="{x:Null}"/>
                </Trigger>



            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid Background="#FF404040" >



        <Button Content="Start Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Height="45" Width="110" 
                Command="{Binding ActivateCommand}"
                />


        <Button Content="Stop Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="130,5,0,0" 
                Command="{Binding DeactivateCommand}"
                />


        <Button Content="Close" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="230" Margin="10,210,0,0"
                Command="{Binding ExitApplicationCommand}"
                />

        <Button 
                Content="Расписание" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="230" Height="45" Margin="10,65,0,0"
                />



        <Button Content="Список файлов" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="230" Margin="10,120,0,0"
                Command="{Binding OpenFilesFolderCommand}"
                />




        <TextBox HorizontalAlignment="Left" 
                 Margin="250,5,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding Log}"
                 VerticalAlignment="Top"
                 Height="250" Width="230"
                 Background="#FF575757"
                 BorderBrush="{x:Null}"
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True" 
                 
                 TextChanged="TextBox_TextChanged" Foreground="White">
                 
            <TextBox.BitmapEffect>

                <DropShadowBitmapEffect ShadowDepth="3" Softness="0.2"  Opacity="0.5"/>

            </TextBox.BitmapEffect>

        </TextBox>

    </Grid>
</Window>
