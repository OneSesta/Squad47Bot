<Window x:Class="TelegramBot.Views.MainWindow"
        x:Name="MainWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TelegramBot"
        xmlns:vms="clr-namespace:TelegramBot.ViewModels"
        mc:Ignorable="d"
        Title="Squad 47 Bot"
        Height="283" 
        Width="500"
        MinHeight="283"
        MinWidth="500" 
        ResizeMode="CanMinimize"
        Style="{StaticResource DefaultWindowStyle}">

    <Window.Resources>

    </Window.Resources>

    <Grid>

        <Button Content="Start Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Height="45" Width="110" 
                Command="{Binding ActivateCommand}" Margin="10,25,0,0"
                />

        <Button Content="Stop Bot" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="130,25,0,0" 
                Command="{Binding DeactivateCommand}"
                />

        <Button Content="Close" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="230" Margin="10,230,0,0"
                Command="{Binding ExitApplicationCommand}"
                />

        <Button Content="Files" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="10,75,0,0"
                Command="{Binding OpenFilesFolderCommand}"
                />

        <Button Content="Schedule" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Height="45" Width="110" Margin="130,75,0,0"
                Command="{Binding OpenScheduleCommand}"
                />

        <DockPanel Height="20"
                   VerticalAlignment="Top"
                   x:Name="MenuDockPanel"
                   Background="#FF6C6C6C"
                   >
            <Menu Height="20"
                  DockPanel.Dock="Top"
                  Background="#FF6C6C6C"
                  x:Name="MainWindowMenu"
                  HorizontalAlignment="Left" Width="{Binding }">
                <MenuItem Header="File">
                    <MenuItem Header="Open Files"
                          Command="{Binding OpenFilesFolderCommand}"
                          />
                    <MenuItem Header="Open local files"
                          Command="{Binding OpenLocalFilesCommand}"
                          />
                    <MenuItem Header="Exit"
                          Command="{Binding ExitApplicationCommand}"
                          />
                </MenuItem>
                <MenuItem Header="Options">
                    <MenuItem Header="Clear Logs"
                          Command="{Binding ClearLogCommand}"
                          />
                </MenuItem>
                <MenuItem Header="Help">
                    <MenuItem Header="Sorry, bro, we can't help you"/>
                    <MenuItem Header="About"/>
                </MenuItem>
            </Menu>
        </DockPanel>


        <TextBox x:Name="LogTextBox"
                 HorizontalAlignment="Left" 
                 Margin="250,25,0,0"
                 TextWrapping="Wrap"
                 Text="{Binding Log, Mode=OneWay}"
                 VerticalAlignment="Top"
                 Height="250" Width="230"
                 Background="#FF575757"
                 BorderBrush="{x:Null}"
                 ScrollViewer.CanContentScroll="True"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True" 
                 Foreground="White"
                 Padding="7,0,7,0">

            <TextBox.BitmapEffect>

                <DropShadowBitmapEffect ShadowDepth="3" Softness="0.2"  Opacity="0.5"/>

            </TextBox.BitmapEffect>

        </TextBox>


    </Grid>
</Window>
